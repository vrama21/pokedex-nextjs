{
  "extends": ["airbnb", "prettier", "plugin:react/recommended"],
  "plugins": ["prettier", "react"],
  "rules": {
    "prettier/prettier": ["error"],
    "quotes": ["error", "single"],
    "max-len": ["error", { "code": 150 }],
    "no-console": [
      "error",
      {
        "allow": ["error", "log"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "react/jsx-props-no-spreading": "off"
      }
    }
  ]
}
